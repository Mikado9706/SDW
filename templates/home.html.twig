{% extends 'base.html.twig' %}

{% block body %}
<main>
    <div class="container">
        <div class="row blue">
                {{ form_start(form) }}
            <div class="col l12 form-container">
                <div class="container-fluid">
                    <div class="row">
                        <div class="input-field subSelect col s12 l3">
                            {{ form_widget(form.alternation) }}
                        </div>
                        <div class="input-field subSelect col s12 l3">
                            {{ form_widget(form.backToSchool) }}
                        </div>
                        <div class="input-field subSelect col s12 l3">    
                            {{ form_widget(form.level) }}
                        </div>
                        <div class="input-field subSelect col s12 l3">
                            {{ form_widget(form.rncp) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col l12 etc-container">
                <div class="container-fluid">
                    <div class="row">
                        <div class="etc-wrapper">
                            <div class="etc">
                                <span>...</span>
                            </div>  
                        </div>  
                    </div>
                </div>
            </div>
            <div class="col l12 form-container">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col l6">
                            <div class="container-fluid">
                                <div id="leftPannel" class="row">
                                    <div class="col s12">
                                        <div class="subRech">
                                            <div class="input-field">
                                                {{ form_widget(form.formation) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col s12 notSearch disabled">
                                        <div class="subRech">
                                            <div  class="input-field">
                                                {{ form_widget(form.noFormation) }}
                                            </div>
                                        </div>
                                    </div>                        
                                </div>
                            </div>
                        </div>
                        <div class="col l6">
                            <div class="container-fluid">
                                <div id="rightPannel" class="row">
                                    <div class="col s12 notSearch disabled">
                                        <div class="subRech">
                                            <div class="input-field">
                                                {{ form_widget(form.location) }} 
                                            </div>
                                        </div> 
                                    </div>
                                    <div class="col s12">
                                        <div class="subRech">
                                            <div class="input-field">
                                                {{ form_widget(form.noLocation) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col l12 search-section">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col l12">
                            <div class="search-button">
                                {{ form_widget(form.search) }}
                            </div>
                        </div>
                    </div>                
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}